<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="V1_BoardReply">

	
	<!-- 댓글추가 -->
	<insert id="inserBoardReplyOne" parameterType="V1_BoardReply" useGeneratedKeys="false">
		INSERT INTO V1_BOARD_REPLY
		(PRL_NO, PRL_CONTENT, PRL_WRITER, BRD_NO, PRL_DATE)
		VALUES
		(SEQ_BOARD_REPLY_NO.NEXTVAL, #{prl_content},#{prl_writer},
		#{brd_no}, SYSDATE)
	</insert>
	
	<!-- 댓글리스트 -->
	<select id="selectBoardReplyList" parameterType="int" resultType="V1_BoardReply">
		SELECT *
		FROM V1_BOARD_REPLY
		WHERE BRD_NO = #{brd_no} ORDER BY PRL_NO DESC
	</select>
	
	<!-- 댓글삭제 -->
	<delete id="daleteBoardReplyOne" parameterType="int">
		DELETE FROM V1_BOARD_REPLY WHERE PRL_NO=#{prl_no}
	</delete>
	
	<!-- 게시판삭제시 댓글삭제 -->
	<delete id="daleteBoardReplyOne1" parameterType="int">
		DELETE FROM V1_BOARD_REPLY WHERE BRD_NO=#{brd_no}
	</delete>
	
</mapper>