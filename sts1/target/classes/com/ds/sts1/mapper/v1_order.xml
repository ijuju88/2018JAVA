<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="V1_Order">

	<!-- 배송주문 -->
	<insert id="OrderInsert" parameterType="V1_Order"
		useGeneratedKeys="false">
		INSERT INTO V1_ORDER
		VALUES
		(SEQ_V1_ORDER_NO.NEXTVAL,#{ord_cnt},SYSDATE,
		#{itm_no}, #{mem_id})
	</insert>

	<!-- 주문보기(관리자용) -->
	<select id="selectMemberItemOrderList" resultType="java.util.HashMap">
		SELECT oi.ORD_ID, oi.ORD_CNT, oi.ORD_DATE, 
					oi.ITM_NAME, oi.ITM_PRICE, m.MEM_NAME, m.MEM_EMAIL 
		FROM V1_MEMBER m, 
			(SELECT  
				* 
			FROM 
				V1_ORDER o, V1_ITEM i
			WHERE 
				o.ITM_NO = i.ITM_NO) oi
		WHERE
			m.MEM_ID = oi.MEM_ID		
	</select>
</mapper>
